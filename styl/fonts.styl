// fonts:
$font1 = 'Arial';
$font2 = 'Times New Roman';

.font_page-title {
    font-family: $font1;
    font-size: 20px;
    font-weight: 600;
    line-height: 20px;
    text-transform: uppercase;
}

.font_page-subtitle {
    font-family: $font1;
    font-size: 20px;
    font-weight: 400;
    line-height: 20px;
    text-transform: uppercase;
}

.font_h1 {
    font-family: $font1;
    font-size: 32px;
    font-weight: 600;
    letter-spacing: -0.64px;
    line-height: 40px;
}

.font_h2 {
    font-family: $font1;
    font-size: 24px;
    font-weight: 500;
    letter-spacing: -0.48px;
    line-height: 32px;
}

.font_button {
    font-family: $font1;
    font-size: 14px;
    font-weight: 400;
    line-height: 14px;
}

.font_caption-l-medium {
    font-family: $font1;
    font-size: 16px;
    font-weight: 500;
    letter-spacing: -0.32px;
    line-height: 20px;
}

.font_caption-l-regular {
    font-family: $font1;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: -0.32px;
    line-height: 20px;
}

.font_caption-l-light {
    font-family: $font1;
    font-size: 16px;
    font-weight: 300;
    letter-spacing: -0.32px;
    line-height: 20px;
}

.font_caption-m-medium {
    font-family: $font1;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: -0.28px;
    line-height: 18px;
}

.font_caption-m-regular {
    font-family: $font1;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: -0.28px;
    line-height: 18px;
}

.font_caption-m-light {
    font-family: $font1;
    font-size: 14px;
    font-weight: 300;
    letter-spacing: -0.28px;
    line-height: 18px;
}

.font_caption-s-regular {
    font-family: $font1;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: -0.24px;
    line-height: 14px;
}

.font_body-semibold {
    font-family: $font2;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
}

.font_body-regular {
    font-family: $font2;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
}

@media screen and (min-width: 1920px) {
    .font_h1 {
        font-family: $font1;
        font-size: 36px;
        font-weight: 600;
        letter-spacing: -0.72px;
        line-height: 44px;
    }

    .font_h2 {
        font-family: $font1;
        font-size: 32px;
        font-weight: 500;
        letter-spacing: -0.64px;
        line-height: 40px;
    }

    .font_button {
        font-family: $font1;
        font-size: 18px;
        font-weight: 400;
        line-height: 20px;
    }

    .font_caption-l-medium {
        font-family: $font1;
        font-size: 18px;
        font-weight: 400;
        line-height: 20px;
    }

    .font_caption-l-regular {
        font-family: $font1;
        font-size: 18px;
        font-weight: 400;
        letter-spacing: -0.36px;
        line-height: 24px;
    }

    .font_caption-l-light {
        font-family: $font1;
        font-size: 18px;
        font-weight: 300;
        letter-spacing: -0.36px;
        line-height: 24px;
    }

    .font_caption-m-medium {
        font-family: $font1;
        font-size: 16px;
        font-weight: 500;
        letter-spacing: -0.32px;
        line-height: 20px;
    }

    .font_caption-m-regular {
        font-family: $font1;
        font-size: 16px;
        font-weight: 400;
        letter-spacing: -0.32px;
        line-height: 20px;
    }

    .font_caption-m-light {
        font-family: $font1;
        font-size: 16px;
        font-weight: 300;
        letter-spacing: -0.32px;
        line-height: 20px;
    }

    .font_caption-s-regular {
        font-family: $font1;
        font-size: 14px;
        font-weight: 400;
        letter-spacing: -0.28px;
        line-height: 16px;
    }

    .font_body-semibold {
        font-family: $font2;
        font-size: 18px;
        font-weight: 600;
        line-height: 26px;
    }

    .font_body-regular {
        font-family: $font2;
        font-size: 18px;
        font-weight: 400;
        line-height: 26px;
    }
}